# =======================================
# üåç AirSphere Connect - Environment File
# =======================================
# ‚ö†Ô∏è Copy this file and rename it to `.env`
# ‚ö†Ô∏è Don't commit your real `.env` to GitHub
# =======================================

# ==============================
# üóÑÔ∏è DATABASE - MariaDB
# ==============================
MARIADB_VERSION=12.0.2
DB_CONTAINER_NAME=air-sphere-connect_db
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=air_sphere_connect
DB_USER=air_sphere_connect_user
DB_PASSWORD=your_db_password_here
DB_ROOT_PASSWORD=your_root_password_here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_VOLUME_NAME=air-sphere-connect_db_data

# ==============================
# ‚öôÔ∏è BACKEND - Spring Boot
# ==============================
BACKEND_CONTEXT=./air-sphere-connect-back
BACKEND_DOCKERFILE=Dockerfile.dev
BACKEND_CONTAINER_NAME=airsphere_backend
BACKEND_PORT=8080
DEBUG_PORT=5005
JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005


# Spring Boot configuration
SPRING_PROFILES_ACTIVE=dev
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# ==============================
# üíª FRONTEND - Angular
# ==============================
FRONTEND_CONTEXT=./air-sphere-connect-front
FRONTEND_DOCKERFILE=Dockerfile.dev
FRONTEND_CONTAINER_NAME=airsphere_frontend
FRONTEND_PORT=4200
FRONTEND_INTERNAL_PORT=80

# ==============================
# üìß MAIL SERVICE - MailHog
# ==============================
MAIL_HOST=mailhog
MAIL_PORT=1025

# ==============================
# üå§Ô∏è EXTERNAL APIs (Optional)
# ==============================
WEATHER_API_KEY=your_weather_api_key_here
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_API_SECRET=your_mailjet_api_secret_here

# ==============================
# üåê CORS & NETWORK
# ==============================
CORS_ORIGINS=http://localhost:4200
NETWORK_NAME=air-sphere-connect-network