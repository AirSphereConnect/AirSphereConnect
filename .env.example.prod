# =================================#
# ENVIRONNEMENT : PRODUCTION       #
# Template à copier en .env.prod   #
# =================================#

# ==============================#
# BASE DE DONNÉES MARIADB       #
# ==============================#
MARIADB_VERSION=12.0.2
DB_ROOT_PASSWORD=CHANGEZ_MOI_MOT_DE_PASSE_ROOT_SECURISE
DB_NAME=air_sphere_connect
DB_USER=air_sphere_connect_user
DB_PASSWORD=CHANGEZ_MOI_MOT_DE_PASSE_USER_SECURISE
DB_HOST=mariadb
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PORT=3307
DB_CONTAINER_NAME=air_sphere_connect_db
DB_VOLUME_NAME=air_sphere_connect_db_data

# ==============================#
# BACKEND SPRING BOOT           #
# ==============================#
BACKEND_PORT=8080
BACKEND_CONTAINER_NAME=air_sphere_connect_back
BACKEND_CONTEXT=./air-sphere-connect-back
BACKEND_DOCKERFILE=Dockerfile
DEBUG_PORT=5005

# MAIL - Configuration SMTP réelle
# Exemples de configurations :
# - Mailjet : in-v3.mailjet.com:587
# - Gmail : smtp.gmail.com:587
# - OVH : ssl0.ovh.net:587
MAIL_HOST=CHANGEZ_MOI_SMTP_HOST
MAIL_PORT=587
MAIL_USERNAME=CHANGEZ_MOI_SMTP_USERNAME
MAIL_PASSWORD=CHANGEZ_MOI_SMTP_PASSWORD

# Configuration Spring
SPRING_PROFILES_ACTIVE=prod
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# CORS - URL du frontend en production (IMPORTANT: mettre l'URL exacte sans / final)
CORS_ORIGINS=https://votre-domaine.com

# ==============================#
# FRONTEND ANGULAR              #
# ==============================#
FRONTEND_PORT=4200
FRONTEND_CONTAINER_NAME=air_sphere_connect_front
FRONTEND_CONTEXT=./air-sphere-connect-front
FRONTEND_DOCKERFILE=Dockerfile
FRONTEND_INTERNAL_PORT=80

# API Configuration - URL complète de l'API backend (IMPORTANT: avec /api)
API_URL=https://votre-domaine.com/api
NODE_ENV=production

# ==============================#
# URLS DE L'APPLICATION         #
# ==============================#
# URL de base du frontend (sans /api)
FRONTEND_URL=https://votre-domaine.com

# URL de base du backend (avec /api)
BACKEND_URL=https://votre-domaine.com/api

# ==============================#
# HEALTH CHECKS                 #
# ==============================#
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=20s
HEALTHCHECK_RETRIES=5
HEALTHCHECK_START_PERIOD=45s

# ==============================#
# RESEAU                        #
# ==============================#
NETWORK_NAME=air_sphere_connect_network

# ==============================#
# MAILHOG                       #
# ==============================#
MAILHOG_CONTAINER_NAME=mailhog

# ==============================#
# CLÉS API EXTERNES             #
# ==============================#
WEATHER_API_KEY=CHANGEZ_MOI_VOTRE_CLE_API_METEO

MAILJET_API_KEY=CHANGEZ_MOI_VOTRE_CLE_MAILJET
MAILJET_API_SECRET=CHANGEZ_MOI_VOTRE_SECRET_MAILJET
